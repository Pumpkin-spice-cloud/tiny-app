<header>


  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <form method="POST" action="/logout">
      <% if(username) { %>

        <label for="username" style=" position: relative; left:  1500px">Current User: <%= username %></label>
        <button type="submit" class="btn btn-primary" style="position:relative; left: 1500px">Logout</button>
        <% } %>
    </form>
    <form method="POST" action="/login">
      <div class="form-group mb-2">

        <% if(username === undefined) { %>
        <input class="form-control" type="text" name="username" style="width: 300px; position:relative; left: 1500px"
          placeholder="login">
        <button type="submit" class="btn btn-primary" style="position:relative; left: 1500px">Submit</button>
        <% } %>
      </div>
    </form>
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
  </nav>

</header>